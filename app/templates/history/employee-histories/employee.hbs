<table class="history_table employee">
  <caption>Articoli scaricati a favore di {{employee_complete_name}}</caption>
  <thead>
    <tr>
      <td colspan="4">
        Mostrati {{items_showed}} eventi su {{total_items}} ----- Pagina {{current_page}}/{{total_pages}}
        <div class="history_pagination to_right">
          <button class="link" type="button" name="history_prev" {{action "on_history_prev"}}>Pagina precedente</button>
          <span> / </span>
          <button class="link" type="button" name="history_next" {{action "on_history_next"}}>Pagina successiva</button>
        </div>
      </td>
    </tr>
    <tr>
      <th>Data transazione</th>
      <th>Quantità</th>
      <th>Nome articolo</th>
      <th>Codice id</th>
      <th>Tipo di transazione</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.model as |history| }}
      {{#if history.transaction_time}}
      <tr>
        <td title="Data della transizione">{{history.transaction_time}}</td>
        <td title="Quantità">{{history.quantity}}</td>
        <td title="Nomenclatura Aggeggio" class="clickable denomination_text" {{action "onClickHistory" history.contraption_id}}>{{history.contraption_denomination}}</td>
        <td title="Codice" class="id_code_text">{{history.contraption_id_code}}</td>
        <td title="Tipo di transazione">{{history.it_short_description}}</td>
      </tr>
      {{/if}}
    {{/each}}

  </tbody>
</table>

{{outlet}}
